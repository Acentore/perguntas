<!DOCTYPE html>
<html lang="pt-br">

<%- include('partials/header.ejs', {title: pergunta.titulo}) %>

<body>
  <%- include('partials/navBar.ejs') %>
  <div class="container bg-white p-3">
    <hr>
    <h1><%= pergunta.titulo %></h1>
    <p><%= pergunta.descricao %></p>
    <hr>

    <form method="POST" action="/responder">
      <div class="form-group">
        <label for="resposta">Insira sua resposta</label>
        <textarea name="corpo" class="form-control" id="resposta" rows="3"></textarea>
      </div>
      <input type="hidden" name="id" value="<%=pergunta.id%>">
      <button class="btn btn-primary">Responder</button>
    </form>
    <hr>
    <h3>Respostas</h3>

    <%respostas.forEach(resposta => { %>
      <div class="card mt-3">
        <div class="card-body">
          <p><%= resposta.corpo %></p>
        </div>
      </div>
		<% })  %>
  </div>
  
  <%- include('partials/footer.ejs') %>
</body>

</html>